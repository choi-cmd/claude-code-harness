        "fastapi-backend-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "FastAPI backend development patterns for Python async applications with SQLModel/SQLAlchemy, domain-driven design, and layered architecture",
            "promptTriggers": {
                "keywords": [
                    "backend",
                    "backend development",
                    "fastapi",
                    "FastAPI",
                    "service",
                    "repository",
                    "route",
                    "router",
                    "routing",
                    "API",
                    "endpoint",
                    "async",
                    "await",
                    "SQLModel",
                    "SQLAlchemy",
                    "database",
                    "orm",
                    "domain",
                    "dto",
                    "pydantic",
                    "validation",
                    "model",
                    "middleware"
                ],
                "intentPatterns": [
                    "(create|add|implement|build).*?(route|endpoint|API|router|service|repository)",
                    "(fix|handle|debug).*?(error|exception|backend)",
                    "(add|implement).*?(middleware|validation|error.*?handling)",
                    "(organize|structure|refactor).*?(backend|service|API|domain)",
                    "(how to|best practice).*?(backend|fastapi|route|router|service|repository)",
                    "(async|await).*?(pattern|function|method)",
                    "(database|orm|model).*?(query|create|update|delete)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "backend/backend/**/*.py",
                    "backend/backend/api/**/*.py",
                    "backend/backend/domain/**/*.py",
                    "backend/backend/dtos/**/*.py"
                ],
                "pathExclusions": [
                    "**/__pycache__/**",
                    "**/*.pyc",
                    "**/test_*.py",
                    "**/*_test.py",
                    "**/conftest.py"
                ],
                "contentPatterns": [
                    "from fastapi import",
                    "@router\\.",
                    "async def",
                    "AsyncSession",
                    "SQLModel",
                    "BaseRepository",
                    "class.*Service:",
                    "class.*Repository:"
                ]
            }
        },
